{
"update_url": "https://clients2.google.com/service/update2/crx",

  "name": "AutoTC for SteamGifts",
  "description": "Automatically enters giveaways from a Steamgifts.com page (main, wishlist or any other)",
  "version": "1.0",
  "icons": { "16": "autologo16.png",
			"48": "autologo48.png",
			"128": "autologo.png" },
  "web_accessible_resources": ["night.css"] ,
  "permissions": [
    "alarms", "notifications", "storage", "tabs", "*://www.steamgifts.com/*", "*://store.steampowered.com/*"
  ],
  "content_scripts": [ {
	"css": ["general.css"],
    "js": [ "jquery.min.js", "autoentry.js" ],
    "matches": [ "*://www.steamgifts.com/", "*://www.steamgifts.com/giveaways/search?*", "*://steamgifts.com/", "*://steamgifts.com/giveaways/search?*"]
  },
  {
	"js": [ "jquery.min.js", "night.js" ],
    "matches": [ "*://steamgifts.com/giveaways/created/*", "*://www.steamgifts.com/giveaways/created/*", "*://steamgifts.com/giveaways/entered/*", "*://www.steamgifts.com/giveaways/entered/*", "*://steamgifts.com/giveaways/won/*", "*://www.steamgifts.com/giveaways/won/*",
				"*://steamgifts.com/trades/*", "*://www.steamgifts.com/trades/*", "*://steamgifts.com/sales/*", "*://www.steamgifts.com/sales/*", "*://steamgifts.com/discussions/*", "*://www.steamgifts.com/discussions/*", "*://steamgifts.com/discussion/*", "*://www.steamgifts.com/discussion/*",
				"*://steamgifts.com/about/*", "*://www.steamgifts.com/about/*", "*://steamgifts.com/support/*", "*://www.steamgifts.com/support/*", "*://steamgifts.com/messages/*", "*://www.steamgifts.com/messages/*", "*://steamgifts.com/account/*", "*://www.steamgifts.com/account/*",
				"*://steamgifts.com/trade/*", "*://www.steamgifts.com/trade/*", "*://steamgifts.com/users/*", "*://www.steamgifts.com/users/*", "*://steamgifts.com/user/*", "*://www.steamgifts.com/user/*", "*://steamgifts.com/giveaway/*", "*://www.steamgifts.com/giveaway/*",
				"*://steamgifts.com/legal/*", "*://www.steamgifts.com/legal/*"]
  }],
  "background": {
    "scripts": [ "jquery.min.js", "backgroundpage.js" ],
    "persistent": true
  },
  "manifest_version": 2
}
